<body class="container">

<header>
  <div class="container">
    <% include ../partials/header %>
  </div>
</header>
<main role="main" class="container">
    <div class="container">
    <% include ../partials/header %>
  </div>
      <div class="row">
        <div class="col-md-8 blog-main">
          <h3 class="pb-3 mb-4 font-italic border-bottom">
            From the Firehose
          </h3>

          <div class="blog-post">
              <%if(eventInformation != null){ %>
              <h2 class="blog-post-title"><%= eventInformation.eventName %></h2>
              <%}%>

              <% if(eventInformation != null){ %>
              <p class="detail-text"> <%= eventInformation.eventDescription %> </p>
              <%}%>

              <hr>
              <h2> Teams </h2>

              <% if(teamEvent != null){ %>
              <% for(var i=0; i < teamEvent.length; i++) { %>
              <div class="text-muted pt-3">
                <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                  <div class="d-flex justify-content-between align-items-center w-100">
                    <strong class="text-gray-dark"><%= teamEvent[i] %></strong>
                     <% if(teamIDs != null) { %>
                     <u1>
                       <a href="/jointeam/<%= teamIDs[i]%>/<%= eventInformation.id%>"> Join</a>
                       <a href="/team/<%= teamIDs[i]%>/<%= eventInformation.id%>"> View </a>
                    </u1>
                      <%}%>
                  </div>
                </div>
              </div>
              <% } %>
              <% } %>

              <small class="d-block text-left mt-3">
                  <a style="color:rgb(66,134,244)">Create a Team!</a>
                </small>
                <form action="/createTeam" method="post">
                    <input type="hidden" name="eventID" value= <%= eventInformation.id %>>
                    <input type="text" placeholder="Team Name" name="teamName">
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>


          </div><!-- /.blog-post -->



        </div><!-- /.blog-main -->

        <aside class="col-md-4 blog-sidebar">
          <div class="p-3 mb-3 rounded about">
            <h4 class="font-italic">About</h4>
            <p class="mb-0">
                <% if(eventInformation != null){ %>
                Time Start: <%= eventInformation.timeStart %>
                <br>
                Time End: <%= eventInformation.timeEnd %>
            </p>
              <br>
            <p>
                <%= eventInformation.eventAddress %>
                <br>
                <%= eventInformation.eventCity %> <%= eventInformation.eventZip %>
                <%}%>
            </p>
          </div>

          <!--
          <div class="p-3">
            <h4 class="font-italic">Elsewhere</h4>
            <ol class="list-unstyled">
              <li><a href="#">GitHub</a></li>
              <li><a href="#">Twitter</a></li>
              <li><a href="#">Facebook</a></li>
            </ol>
          </div>
        -->
        </aside><!-- /.blog-sidebar -->

      </div><!-- /.row -->

    </main><!-- /.container -->
