<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<script src="https://code.jquery.com/jquery-3.1.1.js"
integrity=sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA="
crossorigin="anonymous"></script>
<script type="text/javascript" src="javascripts/script.js"></script>

<header>
    <% include ../partials/header %>
</header>

<main role="main" class="container">
      <div class="row">
        <div class="col-md-8 blog-main">
          <% if(eventInformation != null){ %>
          <h3 class="pb-3 mb-4 font-italic border-bottom"> <%= eventInformation.eventName %> </h3>
          <% } %>
          <div class="blog-post">
            <h2 class="blog-post-title"> Details </h2>
             <% if(eventInformation != null){ %>
            <p>
              <%= eventInformation.eventDescription %>
            </p>
            <% } %>
            <hr>
            <h2> Teams </h2>

            <div class="my-3 p-3 bg-white rounded box-shadow">
               <% if(teamEvent != null){ %>
              <% for(var i=0; i < teamEvent.length; i++) { %>
                <div class="media text-muted pt-3">
                  <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
                  <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                    <div class="d-flex justify-content-between align-items-center w-100">
                      <strong class="text-gray-dark"> <%= teamEvent[i] %> </strong>
                      <% if(teamIDs != null) { %>
                      <a href="/jointeam/<%= teamIDs[i]%>/<%= eventInformation.id%>"> Join  
                        <!--
                        <form action="/jointeam" method="post">
                        <input type="hidden" name="eventID" value= <%= eventInformation.id %>>
                        <input type="hidden" name="teamID" value = <%= teamIDs[i] %>
                        <button type="submit" class="btn btn-primary">Create</button>
                        </form>-->
                      </a>
                       <a href="/team/<%= teamIDs[i]%>/<%= eventInformation.id%>"> View </a>

                      <% } %>
                    </div>
                  </div>
                </div>
               <% } %>
               <% } %>

               <!--
                <small class="d-block text-right mt-3">
                  <a href="#">View More Teams</a>
                </small>
                -->
                <small class="d-block text-left mt-3">
                  <a style="color:rgb(66,134,244)">Create a Team!</a>
                </small>
                <form action="/createTeam" method="post">
                    <input type="hidden" name="eventID" value= <%= eventInformation.id %>>
                    <input type="text" placeholder="Team Name" name="teamName">
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
                

              </div>

          </div><!-- /.blog-post -->


        </div><!-- /.blog-main -->

        <aside class="col-md-4 blog-sidebar">
          <div class="p-3 mb-3 bg-light rounded">
            <h4 class="font-italic">About</h4>
            <p class="mb-0">
              <% if(eventInformation != null){ %>
              Time Start: <%= eventInformation.timeStart %>
              <br>
              Time End: <%= eventInformation.timeEnd %>
            </p>
              <br>
            <p>
              <%= eventInformation.eventAddress %>
              <br>
              <%= eventInformation.eventCity %> <%= eventInformation.eventZip %>
              <% } %>
            </p>
          </div>


          <div class="p-3">
            <h4 class="font-italic">Elsewhere</h4>
            <ol class="list-unstyled">
              <li><a href="#">GitHub</a></li>
              <li><a href="#">Twitter</a></li>
              <li><a href="#">Facebook</a></li>
            </ol>
          </div>
        </aside><!-- /.blog-sidebar -->

      </div><!-- /.row -->

    </main><!-- /.container -->

    <footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>